<%= form_for(@todo) do |f| %>
  
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>

    <%= f.label :by_time %>
    <%= f.text_field :by_time, class: 'form-control' %>
      
    <%= f.submit yield(:submit_text), class: "btn btn-lg btn-primary btn-block mt-3" %>
<% end %>